---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-neutral-900 text-neutral-200">
    <Header />
    <main class="max-w-3xl mx-auto px-4">
      <section>
        <ul class="flex flex-col gap-8 list-none p-0 m-0">
          {
            posts.map((post) => (
              <li class="w-full">
						<a 
							href={`/blog/${post.id}/`} 
							class="block group transform transition-transform duration-200 hover:translate-x-1"
						>
							<p class="m-0 text-xs text-neutral-500 group-hover:text-[#93d57f]">
							<FormattedDate date={post.data.pubDate} />
							</p>
							<h4 class="m-0 text-lg font-semibold tracking-wide leading-snug text-neutral-100 group-hover:text-[#93d57f]">
							{post.data.title}
							</h4>


							<p class="m-0 text-sm text-neutral-400">
								{post.data.description}
							</p>
						</a>
					</li>

            ))
          }
        </ul>
        
      </section>
    </main>
    <!-- <Footer /> -->
  </body>
</html>
