---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="bg-white sticky top-0 z-50 text-sm font-bold">
  <nav 
    class="mx-auto px-4 sm:px-0 flex items-center"
    role="navigation"
    aria-label="Main navigation"
  >

    <div class="text-gray-900 w-full h-auto border-b flex justify-between py-2">
      <div class="flex space-x-6">
        <a 
          href="/" 
          class="hover:text-[#93d57f] transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-[#93d57f] focus:ring-offset-2 focus:ring-offset-[#09090b] rounded-sm"
          aria-label="Contributions - Home"
        >
          CONTRIBUTIONS
        </a>
        <a 
          href="/" 
          class="hover:text-[#93d57f] transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-[#93d57f] focus:ring-offset-2 focus:ring-offset-[#09090b] rounded-sm"
          aria-label="GitHub - Home"
        >
          GITHUB
        </a>
        <a 
          href="/" 
          class="hover:text-[#93d57f] transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-[#93d57f] focus:ring-offset-2 focus:ring-offset-[#09090b] rounded-sm"
          aria-label="Biography - Home"
        >
          BIOGRAPHY
        </a>
      </div>

      <div class="flex space-x-6">
        <a 
          href="/" 
          class="hover:text-[#93d57f] transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-[#93d57f] focus:ring-offset-2 focus:ring-offset-[#09090b] rounded-sm"
          aria-label="Contributions - Home"
        >
          RESUME
        </a>
        <a 
          href="/" 
          class="hover:text-[#93d57f] transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-[#93d57f] focus:ring-offset-2 focus:ring-offset-[#09090b] rounded-sm"
          aria-label="GitHub - Home"
        >
          LET'S CONNECT
        </a>
      </div>
    </div>

    
  </nav>
</header>
